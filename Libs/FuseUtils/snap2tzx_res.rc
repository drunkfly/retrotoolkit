#include <config.h>

#include <windows.h>

/* VERSIONINFO specs:
http://msdn.microsoft.com/en-us/library/aa381058%28VS.85%29.aspx
*/
VS_VERSION_INFO VERSIONINFO
FILEVERSION      FUSE_UTILS_RC_VERSION
PRODUCTVERSION   FUSE_UTILS_RC_VERSION
FILEFLAGSMASK    VS_FFI_FILEFLAGSMASK
FILEFLAGS        0x0L
FILEOS           VOS__WINDOWS32
FILETYPE         VFT_APP
FILESUBTYPE      VFT2_UNKNOWN
BEGIN
  BLOCK "StringFileInfo"
  BEGIN
    BLOCK "040904B0"
    BEGIN
      VALUE "CompanyName",      "\0"
      VALUE "FileDescription",  "Convert ZX Spectrum snapshot to .tzx tape images\0"
      VALUE "FileVersion",      VERSION##"\0"
      VALUE "InternalName",     "snap2tzx\0"
      VALUE "LegalCopyright",   "Copyright (c) 1997-2001 ThunderWare Research Center, 2003 Tomaz Kac, 2003 Philip Kendall\0"
      VALUE "License",          "snap2tzx is licensed under the GNU General Public License, version 2 or later\0"
      VALUE "OriginalFilename", "snap2tzx.exe\0"
      VALUE "ProductName",      PACKAGE##"\0"
      VALUE "ProductVersion",   VERSION##"\0"
    END
  END

  BLOCK "VarFileInfo"
  BEGIN
    VALUE "Translation", 0x409, 1252
  END
END
